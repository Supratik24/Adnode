# WalletConnect (required for RainbowKit)
NEXT_PUBLIC_WALLETCONNECT_ID=your_walletconnect_project_id

# Base URL (used for embed snippets, redirects)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Contract addresses (from contracts deploy output)
NEXT_PUBLIC_SLOT_ADDRESS=0x...
NEXT_PUBLIC_MANAGER_ADDRESS=0x...
NEXT_PUBLIC_TREASURY_ADDRESS=0x...

# Polygon RPC (Amoy testnet or mainnet)
POLYGON_RPC=https://rpc-amoy.polygon.technology

# Server signer (private key for on-chain tx signing)
SERVER_SIGNER_KEY=0x...

# SideShift API (for crypto swaps)
SIDESHIFT_API_KEY=your_sideshift_api_key

# MongoDB
MONGO_URL=mongodb+srv://user:pass@cluster.mongodb.net/
MONGO_DB=adnode

# JWT / session signing
WEB_SECRET=your_long_random_secret_string
